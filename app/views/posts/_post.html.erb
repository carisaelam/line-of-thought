<div class="p-4 m-2 container columns is-mobile is-flex is-align-items-center">
  <div class="pr-3 column is-one-fifth"> 
    <img src="<%= post.user.avatar_url %>" alt="avatar" class="avatar__image">
  </div>
  
  <div class="column">

    <h2 class="single__post__body title is-size-4 is-size-7-mobile is-italic mb-1">
      <%= post.body %>
    </h2>

    <p class="is-size-7 mb-3">
      by: <%= link_to post.user.full_name, user_path(post.user) %>
    </p>

    <p class="is-size-7 is-hidden-mobile">
      <%= post.created_at.strftime("%b %d, %Y at %I:%M %p") %> 
    </p>

  <div class="is-flex">
    <%# Comment Button %>
      <div class="is-flex is-align-items-center is-flex-direction-row mr-4">
        <div class="icon">
          <a href=<%= post_path(post)%> class="is-not-bulma-a">
            <i class="fa-regular fa-comment"></i>
          </a>
        </div>
        <div class="is-size-7 pl-1">
          <%= post.comments.count %>
        </div>
      </div>
    <%# Like Button %>
      <%= turbo_frame_tag dom_id(post, :like_buttons) do %>
        <%= render partial: 'posts/like_buttons', locals: { post: post } %>
      <% end %>
  </div>

  </div> 

</div>
