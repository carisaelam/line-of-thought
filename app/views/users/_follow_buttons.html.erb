<turbo-frame id="<%= dom_id(user, :follow_buttons) %>">
  <% if current_user.following?(user) %>
    <%= button_to user_follow_path(user.id), method: :delete, data: { turbo_stream: true }, class: 'button is-danger is-small' do %>
      Unfollow
    <% end %>
  <% else %>
    <%= button_to user_follow_path(user.id), method: :post, data: { turbo_stream: true }, class: 'button is-link is-small' do %>
      Follow
    <% end %>
  <% end %>
</turbo-frame>
